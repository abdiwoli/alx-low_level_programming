# Makefile for building the 'school' executable
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(CFLAGS) $^ -o $(NAME)

clean:
	$(RM) -f *~ .*~;

oclean:
	$(RM) -f $(OBJ)
fclean: clean oclean
	$(RM) -f $(NAME) if $(Name) exists
re: oclean all
