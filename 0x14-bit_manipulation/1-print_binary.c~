#include "main.h"
#include <stdio.h>
/**
 * print_binary - function prints binary
 * @n: the number to convert
 */
void print_binary(unsigned long int n)
{
	unsigned long int mask = 1ul << 31;
	int p = 0, i, bit = 0;

	for (i = 0; i < 32; i++)
	{
		bit = (n & mask) ? 1 : 0;
		if (bit == 1)
			p = 1;
		if (p)
			putchar(bit + '0');
		mask >>= 1;
	}
	if (bit == 0)
		putchar(0 + '0');
}
